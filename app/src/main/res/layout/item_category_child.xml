<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/layout_category_child"
    android:background="@drawable/divide_explist_child"

    >
    <ImageView
        android:id="@+id/iv_category_child_thumb"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:background="#f39"
        android:src="@drawable/nopic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_category_childname"
        android:layout_marginLeft="20dp"
        android:text="品名"
        android:textColor="#000"
        android:layout_toRightOf="@id/iv_category_child_thumb"
        android:textSize="19sp"
        android:layout_centerVertical="true"
        />
</RelativeLayout>